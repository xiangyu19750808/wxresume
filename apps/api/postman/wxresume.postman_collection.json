{
  "info": {
    "name": "wxresume API (MVP)",
    "_postman_id": "00000000-0000-0000-0000-000000000001",
    "description": "Minimal collection for local dev",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [{ "key": "baseUrl", "value": "http://localhost:8080" }],
  "item": [
    { "name": "health", "request": { "method": "GET", "url": "{{baseUrl}}/v1/health" } },
    { "name": "templates", "request": { "method": "GET", "url": "{{baseUrl}}/v1/templates" } },
    { "name": "jd.parse", "request": { "method": "POST", "header":[{"key":"Content-Type","value":"application/json"}],
      "body": { "mode": "raw", "raw": "{\"raw_text\":\"3年以上经验，熟练SQL/Excel，了解Tableau，善于沟通协作\"}" },
      "url": "{{baseUrl}}/v1/jd/parse" } },
    { "name": "match.score (jd_text)", "request": { "method": "POST","header":[{"key":"Content-Type","value":"application/json"}],
      "body": { "mode": "raw", "raw": "{\"jd_text\":\"3年以上经验，熟练SQL/Excel，了解Tableau\"}" },
      "url": "{{baseUrl}}/v1/match/score" } },
    { "name": "analysis.report", "request": { "method": "POST","header":[{"key":"Content-Type","value":"application/json"}],
      "body": { "mode": "raw", "raw": "{\"analysis\":{\"match_score\":57,\"hits\":[\"SQL\",\"Excel\"],\"gaps\":[\"Tableau\"]}}" },
      "url": "{{baseUrl}}/v1/analysis/report" } },
    { "name": "auth.wx.callback (mock)", "request": { "method": "GET", "url": "{{baseUrl}}/v1/auth/wx/callback?code=abc123" } },
    { "name": "users.me (JWT)", "request": { "method": "GET",
      "header":[{"key":"Authorization","value":"Bearer {{token}}"}], "url": "{{baseUrl}}/v1/users/me" } },
    { "name": "order.create", "request": { "method": "POST","header":[{"key":"Content-Type","value":"application/json"}],
      "body": { "mode": "raw", "raw": "{\"plan\":\"basic\",\"amount\":1990}" },
      "url": "{{baseUrl}}/v1/order/create" } },
    { "name": "order.status", "request": { "method": "GET",
      "url": "{{baseUrl}}/v1/order/status?out_trade_no={{out_trade_no}}" } },
    { "name": "order.callback (mock)", "request": { "method": "POST","header":[{"key":"Content-Type","value":"application/json"}],
      "body": { "mode": "raw", "raw": "{\"out_trade_no\":\"{{out_trade_no}}\",\"result\":\"SUCCESS\",\"amount\":1990}" },
      "url": "{{baseUrl}}/v1/order/callback" } },
    { "name": "render.pdf", "request": { "method": "POST","header":[{"key":"Content-Type","value":"application/json"}],
      "body": { "mode": "raw", "raw": "{\"html\":\"<div style=\\\"font-size:24px\\\">你好，PDF</div>\"}" },
      "url": "{{baseUrl}}/v1/render/pdf" } },
    { "name": "render.resume", "request": { "method": "POST","header":[{"key":"Content-Type","value":"application/json"}],
      "body": { "mode": "raw", "raw": "{\"templateId\":\"classic\"}" },
      "url": "{{baseUrl}}/v1/render/resume" } },
    { "name": "results.demo", "request": { "method": "POST","header":[{"key":"Content-Type","value":"application/json"}],
      "body": { "mode": "raw", "raw": "{}" }, "url": "{{baseUrl}}/v1/results/demo" } },
    { "name": "results.list", "request": { "method": "GET","url": "{{baseUrl}}/v1/results" } },
    { "name": "file.download (mock)", "request": { "method": "GET","url": "{{baseUrl}}/v1/file/download?file_id={{file_id}}" } },
    { "name": "db.ping", "request": { "method": "GET","url": "{{baseUrl}}/v1/db/ping" } },
    { "name": "openapi.json", "request": { "method": "GET","url": "{{baseUrl}}/v1/openapi.json" } }
  ],
  "event": [],
  "auth": null
}
